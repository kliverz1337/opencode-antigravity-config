{
    "$schema": "https://raw.githubusercontent.com/Opencode-DCP/opencode-dynamic-context-pruning/master/dcp.schema.json",
    "enabled": true,
    "debug": false,
    "pruneNotification": "detailed",
    "pruneNotificationType": "chat",
    "commands": {
        "enabled": true,
        "protectedTools": [
            "task",
            "todowrite",
            "todoread"
        ]
    },
    "manualMode": {
        "enabled": false,
        "automaticStrategies": true
    },
    "turnProtection": {
        "enabled": true,
        "turns": 6
    },
    "protectedFilePatterns": [
        "**/opencode.json",
        "**/opencode.jsonc",
        "**/oh-my-opencode.json",
        "**/oh-my-opencode.jsonc",
        "**/dcp.jsonc",
        "**/package.json",
        "**/.env*",
        "**/AGENTS.md",
        "**/README.md"
    ],
    "tools": {
        "settings": {
            "nudgeEnabled": true,
            "nudgeFrequency": 15,
            "contextLimit": "80%",
            "modelLimits": {
                "google/antigravity-gemini-3-1-pro": "85%",
                "google/antigravity-gemini-3-flash": "80%",
                "google/antigravity-claude-sonnet-4-6": "80%",
                "google/antigravity-claude-sonnet-4-6-thinking": "70%",
                "google/antigravity-claude-opus-4-6-thinking": "65%"
            },
            "protectedTools": [
                "task",
                "todowrite",
                "todoread",
                "batch",
                "plan_enter",
                "plan_exit"
            ]
        },
        "distill": {
            "permission": "allow",
            "showDistillation": true
        },
        "compress": {
            "permission": "ask",
            "showCompression": true
        },
        "prune": {
            "permission": "ask"
        }
    },
    "strategies": {
        "deduplication": {
            "enabled": true,
            "protectedTools": []
        },
        "supersedeWrites": {
            "enabled": true
        },
        "purgeErrors": {
            "enabled": true,
            "turns": 8,
            "protectedTools": []
        }
    }
}